<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.157"/>

    <TextView
        android:id="@+id/tvReportBugTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Bug"
        android:textAppearance="@style/tvSettingsTitle"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintEnd_toEndOf="@id/bgTop"
        android:layout_marginBottom="40dp"
        android:textColor="@color/very_dark_blue"/>

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_panah_kiri"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="47dp"
        app:tint="@color/very_dark_blue"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short Description *"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/inputShortDescription"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/round_input"
                android:padding="12dp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="24dp"
                android:inputType="textCapSentences"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email *"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/round_input"
                android:padding="12dp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="24dp"
                android:inputType="textEmailAddress"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What Happened *"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/inputWhatHappened"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/round_input"
                android:padding="12dp"
                android:gravity="top|start"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="24dp"
                android:inputType="textMultiLine|textCapSentences"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screenshot"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please upload a screenshot if you have any"
                android:textSize="14sp"
                android:textColor="#555555"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/uploadArea"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_card2"
                android:backgroundTint="#F5F5F5"
                android:layout_marginBottom="32dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_cloud_upload_placeholder"
                    android:contentDescription="Upload Icon"
                    app:tint="#AAAAAA"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Files"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:fontFamily="@font/lexend"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnSubmitBug"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/dark_blue"
                android:fontFamily="@font/lexend"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>