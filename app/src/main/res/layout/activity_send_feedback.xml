<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.157"/>

    <TextView
        android:id="@+id/tvSendFeedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Feedback"
        android:textAppearance="@style/tvSettingsTitle"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintEnd_toEndOf="@id/bgTop"
        android:layout_marginBottom="40dp"
        android:textColor="@color/very_dark_blue"/>

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_panah_kiri"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="47dp"
        app:tint="@color/very_dark_blue"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you rate your experience?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lexend"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/ivStar1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star"
                app:tint="@color/gray"
                android:layout_marginEnd="8dp"
                android:contentDescription="Rating Star 1"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/ivStar2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star"
                app:tint="@color/gray"
                android:layout_marginEnd="8dp"
                android:contentDescription="Rating Star 2"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/ivStar3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star"
                app:tint="@color/gray"
                android:layout_marginEnd="8dp"
                android:contentDescription="Rating Star 3"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/ivStar4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star"
                app:tint="@color/gray"
                android:layout_marginEnd="8dp"
                android:contentDescription="Rating Star 4"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:id="@+id/ivStar5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star"
                app:tint="@color/gray"
                android:contentDescription="Rating Star 5"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Got suggestions?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lexend"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/input_comments"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Add a comment..."
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/bg_placeholder"
            android:backgroundTint="#F5F5F5"
            android:textColorHint="#919ca8"
            android:textColor="@color/black"
            android:fontFamily="@font/lexend"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnSendFeedback"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="@font/lexend"
            android:text="Send Feedback"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>