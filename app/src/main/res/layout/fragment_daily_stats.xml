<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stats_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/daily_productivity"
        android:textAppearance="@style/DailyProductivityText"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/streak_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="58dp"
        android:gravity="center_horizontal"
        android:text="@string/some_id2"
        android:textAppearance="@style/some_id2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_chart_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="33dp"
            android:layout_height="140dp"
            android:background="@drawable/rectangle_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rectangle_2" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintWidth_percent="0.14"
            android:alpha="0.0"
            android:transformPivotY="140dp"/>
        <View
            android:id="@+id/rectangle_2"
            android:layout_width="33dp"
            android:layout_height="91dp"
            android:background="@drawable/rectangle_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rectangle_3"
            app:layout_constraintStart_toEndOf="@id/rectangle_1"
            app:layout_constraintWidth_percent="0.14"
            android:alpha="0.0"
            android:transformPivotY="91dp"/>
        <View
            android:id="@+id/rectangle_3"
            android:layout_width="33dp"
            android:layout_height="44dp"
            android:background="@drawable/rectangle_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rectangle_4"
            app:layout_constraintStart_toEndOf="@id/rectangle_2"
            app:layout_constraintWidth_percent="0.14"
            android:alpha="0.0"
            android:transformPivotY="44dp"/>
        <View
            android:id="@+id/rectangle_4"
            android:layout_width="33dp"
            android:layout_height="84dp"
            android:background="@drawable/rectangle_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rectangle_5"
            app:layout_constraintStart_toEndOf="@id/rectangle_3"
            app:layout_constraintWidth_percent="0.14"
            android:alpha="0.0"
            android:transformPivotY="84dp"/>
        <View
            android:id="@+id/rectangle_5"
            android:layout_width="33dp"
            android:layout_height="64dp"
            android:background="@drawable/rectangle_2_gold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rectangle_6"
            app:layout_constraintStart_toEndOf="@id/rectangle_4"
            app:layout_constraintWidth_percent="0.14"
            android:alpha="0.0"
            android:transformPivotY="64dp"/>
        <View
            android:id="@+id/rectangle_6"
            android:layout_width="33dp"
            android:layout_height="10dp"
            android:background="@drawable/rectangle_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rectangle_7"
            app:layout_constraintStart_toEndOf="@id/rectangle_5"
            app:layout_constraintWidth_percent="0.14"
            android:alpha="0.0"
            android:transformPivotY="10dp"/>
        <View
            android:id="@+id/rectangle_7"
            android:layout_width="33dp"
            android:layout_height="10dp"
            android:background="@drawable/rectangle_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rectangle_6"
            app:layout_constraintWidth_percent="0.14"
            android:alpha="0.0"
            android:transformPivotY="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/x_axis_labels"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="M" style="@style/labelHari" android:gravity="center_horizontal"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="T" style="@style/labelHari" android:gravity="center_horizontal"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="W" style="@style/labelHari" android:gravity="center_horizontal"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="T" style="@style/labelHari" android:gravity="center_horizontal"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="F" style="@style/labelHari" android:gravity="center_horizontal"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="S" style="@style/labelHari" android:gravity="center_horizontal"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="S" style="@style/labelHari" android:gravity="center_horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>