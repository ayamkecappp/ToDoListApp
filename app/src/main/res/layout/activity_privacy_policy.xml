<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.157"/>

    <TextView
        android:id="@+id/tvPrivacyPolicyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textAppearance="@style/tvSettingsTitle"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintEnd_toEndOf="@id/bgTop"
        android:layout_marginBottom="40dp"
        android:textColor="@color/very_dark_blue"/>

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_panah_kiri"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="47dp"
        app:tint="@color/very_dark_blue"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your privacy matters to us. At Timy Time, we are committed to protecting your personal information and ensuring a safe experience while using our app."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What We Collect"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We only collect essential data, such as tasks, reminders, and general app usage, to provide you with personalized productivity insights."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How We Use Your Data"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The information collected is used solely to improve app performance, enhance features, and support your time management journey. We never sell your data to third parties."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Rights"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are always in control of your data. You can export or delete your information anytime through the app settings or by contacting us directly."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="© 2025 Timy Time™. All rights reserved. Timy Time™ is a registered trademark of Timy Time Technology ltd. Unauthorized reproduction or distribution is prohibited by law."
                android:textSize="12sp"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/lexend"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>