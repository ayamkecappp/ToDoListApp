<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:background="@drawable/bg_top_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/fire_icon"
        android:layout_width="34dp"
        android:layout_height="37dp"
        app:layout_constraintTop_toTopOf="@id/bgTop"
        app:layout_constraintEnd_toEndOf="@id/bgTop" android:background="@drawable/ic_fire2"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="16dp"/> <TextView
    android:id="@+id/some_id"
    app:layout_constraintTop_toTopOf="@id/bgTop"
    app:layout_constraintEnd_toEndOf="@id/bgTop" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="182dp"
    android:layout_marginEnd="20dp" android:text="@string/some_id"
    android:textAppearance="@style/some_id"
    android:gravity="center_horizontal"
    />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2B0A2B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_settings"
        app:tint="#2B0A2B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvProfile"
        app:layout_constraintBottom_toBottomOf="@id/tvProfile"
        android:layout_marginEnd="16dp"/>

    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"/>

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_camera"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2B0A2B"
        app:layout_constraintTop_toTopOf="@id/avatarContainer"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/btnEditProfile"
        android:layout_width="149dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Edit Profile"
        android:textSize="14sp"
        android:textColor="#2B0A2B"
        android:background="@drawable/bg_edit_button"
        app:layout_constraintTop_toBottomOf="@id/tvUsername"
        app:layout_constraintStart_toStartOf="@id/tvUsername"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/streakLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/avatarContainer"
        app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:clipToOutline="true"
        android:background="@drawable/daily_weekl"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/bgTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIndicator="@drawable/rectangle_1"
        app:tabIndicatorColor="@color/dark_blue"
        app:tabRippleColor="@android:color/transparent"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="stretch"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabTextColor="@color/tab_text_profile_color"
        app:tabSelectedTextColor="@android:color/white"
        app:tabMode="fixed"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem android:text="@string/daily"/>
        <com.google.android.material.tabs.TabItem android:text="@string/weekly"/>
        <com.google.android.material.tabs.TabItem android:text="@string/monthly"/>
    </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/barchart_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_3"
        android:elevation="7dp"  app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomStats"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="8dp" app:layout_constraintTop_toTopOf="@id/barchart_bg"
        app:layout_constraintStart_toStartOf="@id/barchart_bg"
        app:layout_constraintEnd_toEndOf="@id/barchart_bg"
        app:layout_constraintBottom_toBottomOf="@id/barchart_bg"/>


    <LinearLayout
        android:id="@+id/bottomStats"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toStartOf="@id/barchart_bg"
        app:layout_constraintEnd_toEndOf="@id/barchart_bg"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/CompletedTasks"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Tasks (0)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="22dp"
                android:src="@drawable/ic_completed"
                app:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MissedTasks"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_background_dark_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missed Tasks (0)"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="22dp"
                android:src="@drawable/ic_missed"
                app:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DeletedTasks"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_background_light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deleted Tasks (0)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="22dp"
                android:src="@drawable/ic_deleted"
                app:tint="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        app:itemIconSize="40dp"
        android:layout_gravity="bottom"
        style="@style/CustomBottomNav"
        android:background="@drawable/bg_bottom_nav"
        app:menu="@menu/menu_bottom"
        app:labelVisibilityMode="unlabeled"
        app:itemRippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>