<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_bg_top_height"
        android:background="@drawable/bg_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FIRE ICON - UBAH JADI RELATIF dengan width percent -->
    <ImageView
        android:id="@+id/fire_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_fire2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.11"
        app:layout_constraintTop_toTopOf="@id/bgTop"
        app:layout_constraintEnd_toEndOf="@id/bgTop"
        android:layout_marginTop="@dimen/profile_fire_icon_margin_top"
        android:layout_marginEnd="@dimen/profile_fire_icon_margin_end"/>

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="0"
        android:textAppearance="@style/some_id"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@id/fire_icon"
        app:layout_constraintTop_toTopOf="@id/fire_icon"
        app:layout_constraintBottom_toBottomOf="@id/fire_icon" />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2B0A2B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="@dimen/profile_title_margin_top"/>

    <!-- SETTINGS ICON - DIPERBESAR -->
    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_settings"
        app:tint="#2B0A2B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvProfile"
        app:layout_constraintBottom_toBottomOf="@id/tvProfile"
        android:layout_marginEnd="@dimen/profile_settings_margin_end"/>

    <!-- AVATAR CONTAINER - POSISI NAIK (margin top dikurangi) -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.24"
        app:layout_constraintTop_toBottomOf="@id/tvProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="@dimen/profile_avatar_margin_start">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"/>

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_camera"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2B0A2B"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="@id/avatarContainer"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/profile_username_margin_start"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/btnEditProfile"
        android:layout_width="@dimen/profile_edit_button_width"
        android:layout_height="@dimen/profile_edit_button_height"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Edit Profile"
        android:textSize="15sp"
        android:textColor="#2B0A2B"
        android:background="@drawable/bg_edit_button"
        app:layout_constraintTop_toBottomOf="@id/tvUsername"
        app:layout_constraintStart_toStartOf="@id/tvUsername"
        android:layout_marginTop="@dimen/profile_edit_button_margin_top"/>

    <LinearLayout
        android:id="@+id/streakLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/avatarContainer"
        app:layout_constraintBottom_toBottomOf="@id/avatarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_tab_height"
        android:layout_marginStart="@dimen/profile_tab_margin_horizontal"
        android:layout_marginEnd="@dimen/profile_tab_margin_horizontal"
        android:layout_marginTop="@dimen/profile_tab_margin_top"
        android:clipToOutline="true"
        android:background="@drawable/daily_weekl"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/bgTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIndicator="@drawable/rectangle_1"
        app:tabIndicatorColor="@color/dark_blue"
        app:tabRippleColor="@android:color/transparent"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="stretch"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabTextColor="@color/tab_text_profile_color"
        app:tabSelectedTextColor="@android:color/white"
        app:tabMode="fixed"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem android:text="@string/daily"/>
        <com.google.android.material.tabs.TabItem android:text="@string/weekly"/>
        <com.google.android.material.tabs.TabItem android:text="@string/monthly"/>
    </com.google.android.material.tabs.TabLayout>

    <!-- GUIDELINE untuk membagi ruang chart dan stats secara proporsional -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <View
        android:id="@+id/barchart_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_3"
        android:elevation="7dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineStats"
        android:layout_marginStart="@dimen/profile_chart_margin_horizontal"
        android:layout_marginEnd="@dimen/profile_chart_margin_horizontal"
        android:layout_marginTop="@dimen/profile_chart_margin_top"
        android:layout_marginBottom="12dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/barchart_bg"
        app:layout_constraintStart_toStartOf="@id/barchart_bg"
        app:layout_constraintEnd_toEndOf="@id/barchart_bg"
        app:layout_constraintBottom_toBottomOf="@id/barchart_bg"/>

    <LinearLayout
        android:id="@+id/bottomStats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="17dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/barchart_bg"
        app:layout_constraintEnd_toEndOf="@id/barchart_bg"
        app:layout_constraintTop_toBottomOf="@id/barchart_bg"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:id="@+id/CompletedTasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_background_light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Tasks (0)"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_completed"
                app:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MissedTasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/profile_stats_spacing"
            android:layout_marginEnd="@dimen/profile_stats_spacing"
            android:orientation="vertical"
            android:gravity="start"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_background_dark_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missed Tasks (0)"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_missed"
                app:tint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/DeletedTasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/rounded_background_light_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deleted Tasks (0)"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_deleted"
                app:tint="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        style="@style/CustomBottomNav"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_nav"
        app:itemIconSize="36dp"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>