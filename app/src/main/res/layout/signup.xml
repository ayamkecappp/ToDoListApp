<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- CARD SIGN UP -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signup_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/bg_login_card"
        android:elevation="4dp"
        android:minHeight="380dp"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back to Login di kiri atas card -->

        <!-- Judul -->

        <!-- Input Email -->

        <!-- Input Password -->
        <TextView
            android:id="@+id/tvBackLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_arrow_back"
            android:drawablePadding="6dp"
            android:fontFamily="@font/lexend"
            android:gravity="center_vertical"
            android:text="Back to login"
            android:textColor="#0f2440"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSignupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/lexend"
            android:text="Sign Up"
            android:textColor="#0f2440"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBackLogin" />

        <EditText
            android:id="@+id/input_username"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_input"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:fontFamily="@font/lexend"
            android:hint="Email / Username"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#919ca8"
            android:textSize="16sp"
            android:drawableTint="#919ca8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSignupTitle" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_input"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:hint="Password"
            android:drawableTint="#919ca8"
            android:inputType="textPassword"
            android:fontFamily="@font/lexend"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#919ca8"
            android:textSize="16sp"
            android:tint="#919ca8"
            app:layout_constraintTop_toBottomOf="@id/input_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/input_confirm_password"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_input"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:hint="Confirm Password"
            android:drawableTint="#919ca8"
            android:inputType="textPassword"
            android:fontFamily="@font/lexend"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#919ca8"
            android:textSize="16sp"
            android:tint="#919ca8"
            app:layout_constraintTop_toBottomOf="@id/input_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Tombol Sign Up -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/lexend"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#183351"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_confirm_password" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Avatar -->
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="220dp"
        android:layout_height="305dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/timy1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
