<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="616dp"
        android:background="@drawable/bg_top_blue"
        android:layout_marginBottom="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timy Time"
        android:textSize="35sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/ellipse_7"
        android:layout_width="364dp"
        android:layout_height="28dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/bayangan_timy"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgTimy"
        android:layout_width="264dp"
        android:layout_height="264dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="180dp"
        android:elevation="8dp"
        android:src="@drawable/timy1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_speech_bubble"
        android:padding="12dp"
        android:text="Hi! I'm Timy,\nYour Personal Time Assistant"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/imgTimy"
        app:layout_constraintStart_toStartOf="@id/imgTimy"
        app:layout_constraintEnd_toEndOf="@id/imgTimy"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/icFire"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_fire"
        android:contentDescription="Fire Icon"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="500dp"/>

    <LinearLayout
        android:id="@+id/layoutStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/icFire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="470dp">

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvStreakLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Streaks"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDays"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/rectangle_home"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutStreak"
        android:layout_marginTop="450dp">

        <LinearLayout
            android:id="@+id/daysRow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/full_week_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:progressDrawable="@drawable/custom_progress_bar"
                    android:progress="0"
                    android:max="700"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:id="@+id/day_markers_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/full_week_progress_bar"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:weightSum="7">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:layout_alignParentTop="true"/>

                        <ImageView
                            android:id="@+id/day_marker_0"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ellipse_bar_home"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T"
                            android:layout_alignParentTop="true"/>

                        <ImageView
                            android:id="@+id/day_marker_1"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ellipse_bar_home"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="W"
                            android:layout_alignParentTop="true"/>

                        <ImageView
                            android:id="@+id/day_marker_2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ellipse_bar_home"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T"
                            android:layout_alignParentTop="true"/>

                        <ImageView
                            android:id="@+id/day_marker_3"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ellipse_bar_home"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F"
                            android:layout_alignParentTop="true"/>

                        <ImageView
                            android:id="@+id/day_marker_4"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ellipse_bar_home"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S"
                            android:layout_alignParentTop="true"/>

                        <ImageView
                            android:id="@+id/day_marker_5"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ellipse_bar_home"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S"
                            android:layout_alignParentTop="true"/>

                        <ImageView
                            android:id="@+id/day_marker_6"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ellipse_bar_home"/>
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/runner_icon"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:src="@drawable/run_bar_home"
                    android:layout_alignTop="@id/full_week_progress_bar"
                    android:layout_marginStart="10dp"
                    android:translationY="-10dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#14142A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationY="-30dp"/>

        <TextView
            android:id="@+id/tvWellDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Well Done, Keep Going!"
            android:textSize="12sp"
            style="@style/deletedTasksLabel"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/line_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        app:itemIconSize="40dp"
        android:layout_gravity="bottom"
        style="@style/CustomBottomNav"
        android:background="@drawable/bg_bottom_nav"
        app:menu="@menu/menu_bottom"
        app:labelVisibilityMode="unlabeled"
        app:itemRippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>