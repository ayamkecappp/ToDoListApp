<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Background biru -->
    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="616dp"
        android:background="@drawable/bg_top_blue"
        android:layout_marginBottom="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timy Time"
        android:textSize="35sp"
        android:fontFamily="@font/lexend"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ellipse Shadow di bawah Timy -->
    <View
        android:id="@+id/ellipse_7"
        android:layout_width="364dp"
        android:layout_height="28dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/bayangan_timy"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Timy -->
    <ImageView
        android:id="@+id/imgTimy"
        android:layout_width="264dp"
        android:layout_height="264dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="180dp"
        android:elevation="8dp"
        android:src="@drawable/timy1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Speech Bubble -->
    <TextView
        android:id="@+id/tvSpeech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_speech_bubble"
        android:padding="12dp"
        android:text="Hi! I'm Timy,\nYour Personal Time Assistant"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/imgTimy"
        app:layout_constraintStart_toStartOf="@id/imgTimy"
        app:layout_constraintEnd_toEndOf="@id/imgTimy"
        android:layout_marginBottom="16dp"/>

    <!-- Daily Streak Icon di atas bgTop -->
    <ImageView
        android:id="@+id/icFire"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_fire"
        android:contentDescription="Fire Icon"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="500dp"/>

    <!-- Daily Streak Text -->
    <LinearLayout
        android:id="@+id/layoutStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/icFire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationY="470dp">

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvStreakLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Streaks"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Days card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDays"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/rectangle_home"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutStreak"
        android:layout_marginTop="450dp">


        <!-- Days row -->
        <LinearLayout
            android:id="@+id/daysRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Hari M dengan vectorBar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    style="@style/homeBar"
                    android:gravity="center"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/vectorBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vector_home_bar"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/vectorBar"
                        android:layout_alignBottom="@id/vectorBar"
                        android:layout_marginStart="-13dp"
                        android:src="@drawable/run_bar_home"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- Hari lainnya -->
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:text="T" style="@style/homeBar"
                android:drawableBottom="@drawable/ellipse_bar_home" android:drawablePadding="4dp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:text="W" style="@style/homeBar"
                android:drawableBottom="@drawable/ellipse_bar_home" android:drawablePadding="4dp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:text="T" style="@style/homeBar"
                android:drawableBottom="@drawable/ellipse_bar_home" android:drawablePadding="4dp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:text="F" style="@style/homeBar"
                android:drawableBottom="@drawable/ellipse_bar_home" android:drawablePadding="4dp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:text="S" style="@style/homeBar"
                android:drawableBottom="@drawable/ellipse_bar_home" android:drawablePadding="4dp"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:gravity="center" android:text="S" style="@style/homeBar"
                android:drawableBottom="@drawable/ellipse_bar_home" android:drawablePadding="4dp"/>
        </LinearLayout>

        <!-- Garis horizontal -->
        <View
            android:id="@+id/line_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#14142A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationY="-30dp"/>

        <!-- Well Done -->
        <TextView
            android:id="@+id/tvWellDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Well Done, Keep Going!"
            android:textSize="12sp"
            style="@style/deletedTasksLabel"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/line_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-25dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom navigation -->
    <include
        layout="@layout/include_bottom_nav"
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
