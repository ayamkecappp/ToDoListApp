<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f4f9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/todayText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/lexend"
            android:text="Today"
            android:textColor="#14142A"
            android:textSize="29sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_sun"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/octoberText"
            android:layout_width="200dp"
            android:layout_height="27dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/lexend"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="112dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/btn_calendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_calendar"
            android:contentDescription="Calendar"
            app:layout_constraintTop_toTopOf="@id/todayText"
            app:layout_constraintBottom_toBottomOf="@id/todayText"
            app:layout_constraintEnd_toStartOf="@id/btn_search"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search"
            app:layout_constraintTop_toTopOf="@id/todayText"
            app:layout_constraintBottom_toBottomOf="@id/todayText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" />

        <HorizontalScrollView
            android:id="@+id/calendar_main"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:scrollbars="none"
            android:layout_marginTop="12dp"
            android:paddingStart="16dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/octoberText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/date_items_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical" />

        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/myReminderText"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:text="My Reminder"
        android:textColor="#14142A"
        android:textSize="20sp"
        android:fontFamily="@font/lexend"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>


    <RelativeLayout
        android:id="@+id/reminderContainer"
        android:layout_width="127dp"
        android:layout_height="26dp"
        android:background="@drawable/bg_new_reminder_with_add"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp">


        <TextView
            android:id="@+id/tvNewReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:text="New Reminder"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:fontFamily="@font/lexend"
            android:textStyle="normal" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/task_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/myReminderText"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/tasksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvNoActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You don't have remainder"
        android:textColor="#919ca8"
        android:textSize="18sp"
        android:fontFamily="@font/lexend"
        app:layout_constraintBottom_toBottomOf="@id/task_scrollview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/task_scrollview"
        android:visibility="gone"
        />

    <include
        layout="@layout/include_bottom_nav"
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>