<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/bgTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.157"/>

    <TextView
        android:id="@+id/tvStreakBadgeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streak Badge"
        android:textAppearance="@style/tvSettingsTitle"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintEnd_toEndOf="@id/bgTop"
        android:layout_marginBottom="40dp"
        android:textColor="@color/very_dark_blue"/>

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_panah_kiri"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="@id/bgTop"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="47dp"
        app:tint="@color/very_dark_blue"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/bgTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivMainBadge"
                android:layout_width="550dp"
                android:layout_height="550dp"
                android:src="@drawable/streak_badge_1"
                android:scaleType="fitCenter"
                android:contentDescription="Main Streak Badge"
                android:layout_marginBottom="-170dp"
                android:layout_marginTop="-130dp"/>

            <TextView
                android:id="@+id/tvOnFire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're on Fire!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="48dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Badges"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/very_dark_blue"
                android:fontFamily="@font/lexend"
                android:layout_marginBottom="32dp"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true"
                android:padding="8dp"
                android:layout_marginTop="-39dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/streak_badge_2"
                    android:scaleType="fitCenter"
                    android:contentDescription="Badge 7"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/streak_badge_3"
                    android:scaleType="fitCenter"
                    android:contentDescription="Badge 15"
                    android:layout_margin="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/streak_badge_4"
                    android:scaleType="fitCenter"
                    android:contentDescription="Badge 30"
                    android:layout_margin="8dp"/>


            </GridLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true"
                android:padding="8dp"
                android:layout_marginTop="-39dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/streak_badge_5"
                android:scaleType="fitCenter"
                android:contentDescription="Badge 50"
                android:layout_margin="8dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/streak_badge_6"
                android:scaleType="fitCenter"
                android:contentDescription="Badge 100"
                android:layout_margin="8dp"/>

        </GridLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>