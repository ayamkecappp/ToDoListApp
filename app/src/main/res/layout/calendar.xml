<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f4f9">
    <!--tools:context=".CalendarActivity"-->

    <LinearLayout
        android:id="@+id/calendar_container"
        android:layout_width="411dp"
        android:layout_height="803dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header bulan di atas kalender -->
    <LinearLayout
        android:id="@+id/calendar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Arrow kiri (icon) -->
        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_left"
            android:contentDescription="Arrow Left"
            android:layout_marginEnd="30dp" />

        <!-- Teks bulan -->
        <TextView
            android:id="@+id/month_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="December 2025"
            android:textColor="#14142A"
            android:textSize="20sp"
            android:fontFamily="@font/lexend"
            android:gravity="center" />

        <!-- Arrow kanan (icon) -->
        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_right"
            android:contentDescription="Arrow Right"
            android:layout_marginStart="30dp" />
    </LinearLayout>

    <!-- Header hari (Sunâ€“Sat) -->
    <LinearLayout
        android:id="@+id/week_days_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hari-hari -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:text="Sun"
            android:textColor="#283F6D"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:text="Mon"
            android:textColor="#283F6D"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:text="Tue"
            android:textColor="#283F6D"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:text="Wed"
            android:textColor="#283F6D"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:text="Thu"
            android:textColor="#283F6D"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:text="Fri"
            android:textColor="#283F6D"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="22dp"
            android:text="Sat"
            android:textColor="#283F6D"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/inter"/>
    </LinearLayout>

    <!-- Frame kalender dengan pinggiran -->
    <FrameLayout
        android:id="@+id/calendar_frame"
        android:layout_width="412dp"
        android:layout_height="360dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/calendar_frame_bg"
        app:layout_constraintTop_toBottomOf="@id/week_days_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Grid kalender 6 kolom x 5 baris -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:rowCount="5"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_gravity="center">

            <!-- Baris 1: Sun, Mon, Tue (kosong), Rabu=1 -->
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>

            <!-- Baris 2 -->
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center" android:layout_margin="4dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>

            <!-- Baris 3 -->
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="13" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="14" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="16" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>

            <!-- Baris 4 -->
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="17" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="18" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="19" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="21" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="22" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>

            <!-- Baris 5 -->
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="23" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="24" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="25" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="26" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="27" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="28" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="29" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>
            <LinearLayout android:layout_width="44dp" android:layout_height="56dp" android:background="@drawable/bg_calendar_date" android:orientation="vertical" android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="30" android:textColor="#000000" android:textSize="16sp" android:gravity="center" android:fontFamily="@font/inter"/>
            </LinearLayout>

            <!-- Kosong di akhir supaya GridLayout tetap 5x7 -->
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
            <TextView android:layout_width="44dp" android:layout_height="56dp"/>
        </GridLayout>

    </FrameLayout>


    <!-- Tombol Add Reminder -->
    <LinearLayout
        android:id="@+id/addReminderButton"
        android:layout_width="364dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_add_reminder_calendar"
        android:gravity="center_vertical|start"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/tvAddReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Reminder"
            android:textColor="#292930"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
