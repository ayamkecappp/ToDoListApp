<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient lembut biru -->
    <gradient
        android:startColor="#FFFFFF"   <!-- putih atas -->
    android:endColor="#B3D4F9"     <!-- biru lembut bawah -->
    android:angle="270"/>

    <!-- Sudut membulat di bawah -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="32dp"
        android:bottomRightRadius="32dp"/>

    <!-- Garis pinggir tipis biru -->
    <stroke
        android:width="1dp"
        android:color="#3390CAF9"/>

    <!-- Sedikit padding biar isi tidak mepet -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
