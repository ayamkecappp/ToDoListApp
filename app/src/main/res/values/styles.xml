<resources>
    <style name="LinearItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style umum untuk teks tab -->
    <style name="TabTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DailyProductivityText">
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#14142A</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="some_id">
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#14142A</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="some_id2">
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#14142A</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="labelHari">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular (400) -->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <!-- Warna -->
        <item name="android:textColor">#14142A</item>

        <!-- Background sesuai figma -->


        <!-- Ukuran opsional (kalau mau dipakai di layout) -->
        <item name="android:width">28dp</item>
        <item name="android:height">18dp</item>
    </style>

    <style name="tvSettingsTitle">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
    </style>

    <style name="settingsLabel">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
        <!-- Tebal tulisan -->
        <item name="android:fontWeight">700</item> <!-- 400=Regular, 500=Medium, 700=Bold -->
    </style>

    <style name="settingsContent">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
    </style>

    <style name="completedTasksLabel">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">bold</item> <!-- Regular / 400 -->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
        <item name="android:fontWeight">700</item> <!-- 400=Regular, 500=Medium, 700=Bold -->

    </style>

    <style name="completedTasksContent">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
    </style>

    <style name="deletedTasksLabel">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">bold</item> <!-- Regular / 400 -->
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontWeight">700</item> <!-- 400=Regular, 500=Medium, 700=Bold -->

    </style>

    <style name="missedTasksContent">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
    </style>

    <style name="homeBar">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
    </style>

    <style name="timy_time">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="DayContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DayEllipse">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:drawableBottom">@drawable/ellipse_bar_home</item>
    </style>

    <style name="RunnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="VectorBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/vector_home_bar</item>
    </style>

    <style name="RunnerIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/run_bar_home</item>
    </style>

    <style name="DailyProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:max">100</item>
        <item name="android:indeterminate">false</item>
    </style>

    <!-- Style untuk BottomNavigationView -->
    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/bg_bottom_nav</item>
    </style>

</resources>