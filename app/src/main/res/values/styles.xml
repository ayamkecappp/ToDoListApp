<resources>
    <style name="LinearItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style umum untuk teks tab -->
    <style name="TabTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DailyProductivityText">
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#14142A</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="some_id">
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#14142A</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="some_id2">
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#14142A</item>
        <item name="android:fontFamily">@font/lexend</item>
    </style>

    <style name="labelHari">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular (400) -->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <!-- Warna -->
        <item name="android:textColor">#14142A</item>

        <!-- Background sesuai figma -->


        <!-- Ukuran opsional (kalau mau dipakai di layout) -->
        <item name="android:width">28dp</item>
        <item name="android:height">18dp</item>
    </style>

    <style name="tvSettingsTitle">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
    </style>

    <style name="settingsLabel">
        <!-- Font -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item> <!-- Regular / 400 -->
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>

        <!-- Warna -->
        <item name="android:textColor">#14142A</item>
        <!-- Tebal tulisan -->
        <item name="android:fontWeight">700</item> <!-- 400=Regular, 500=Medium, 700=Bold -->
    </style>

</resources>